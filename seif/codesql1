//TO ADD THE TABLES

DROP DATABASE IF EXISTS samplesql;
CREATE DATABASE samplesql;
USE samplesql;

CREATE TABLE Buyer (
    buyerId INT PRIMARY KEY AUTO_INCREMENT,
    buyerName VARCHAR(100),
    gender CHAR(1),
    age INT
);

CREATE TABLE Agent (
    agentId INT PRIMARY KEY AUTO_INCREMENT,
    agentName VARCHAR(100)
);

CREATE TABLE House (
    houseId INT PRIMARY KEY AUTO_INCREMENT,
    address VARCHAR(255),     -- Must match the Java field "address"
    hasGarden TINYINT(1),
    hasSwimmingPool TINYINT(1),
    hasFence TINYINT(1)
);

CREATE TABLE Location (
    locationId INT PRIMARY KEY AUTO_INCREMENT,
    regionName VARCHAR(100),
    address VARCHAR(255),     -- Same definition here
    latitude DOUBLE,
    longitude DOUBLE,
    distance DOUBLE,
    postcode INT,
    councilArea VARCHAR(255),
    propertyCount INT
);

CREATE TABLE Unit (
    unitId INT PRIMARY KEY AUTO_INCREMENT,
    address VARCHAR(255),     -- Must match your Unit.java's "address" field
    hasBalcony TINYINT(1),
    hasElevator TINYINT(1),
    floorLevel INT
);

CREATE TABLE Townhouse (
    townhouseId INT PRIMARY KEY AUTO_INCREMENT,
    address VARCHAR(255),     -- Must match your Townhouse.java's "address" field
    numberOfSharedWalls INT,
    numberOfLevels INT
);

CREATE TABLE DevelopmentSite (
    developmentSiteId INT PRIMARY KEY AUTO_INCREMENT,
    address VARCHAR(255)
);

CREATE TABLE Transaction (
    transactionId INT PRIMARY KEY AUTO_INCREMENT,
    price VARCHAR(50),
    method VARCHAR(50),
    agentId INT,
    buyerId INT,
    propertyId INT,
    date DATE
);
