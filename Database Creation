CREATE DATABASE java_db ;
CREATE TABLE agents (
    agentId INT PRIMARY KEY,
    agentName VARCHAR(255) NOT NULL
);

CREATE TABLE buyers (
    buyerId INT PRIMARY KEY,
    buyerName VARCHAR(255) NOT NULL,
    gender CHAR(1),

);

CREATE TABLE transactions (
    transactionId INT PRIMARY KEY,
    price DOUBLE,
    method VARCHAR(50),
    agentId INT,
    buyerId INT,
    propertyId INT,
    date DATE,
    FOREIGN KEY (agentId) REFERENCES agents(agentId),
    FOREIGN KEY (buyerId) REFERENCES buyers(buyerId)
    FOREIGN KEY (propertyId) REFERENCES houses(propertyId),
    FOREIGN KEY (propertyId) REFERENCES units(propertyId),
    FOREIGN KEY (propertyId) REFERENCES townhouses(propertyId),
    FOREIGN KEY (propertyId) REFERENCES developmentSite(propertyId)
);
CREATE TABLE houses (
    propertyId INT PRIMARY KEY,
    rooms INT,
    bathroom INT,
    landSize INT,
    hasGarden BOOLEAN,
    parkingSpot INT,
    buildingSize INT,
    yearBuilt INT,
    regionName VARCHAR(255),
    address VARCHAR(255),
    latitude DOUBLE,
    longitude DOUBLE,
    distance DOUBLE,
    postcode INT,
    councilArea VARCHAR(255),
    propertyCount INT
    hasSwimmingPool BOOLEAN,
    hasFence BOOLEAN,
);

CREATE TABLE units (
    landSize INT,
    propertyId INT PRIMARY KEY,
    rooms INT,
    bathroom INT,
    parkingSpot INT,
    buildingSize INT,
    yearBuilt INT,
    floorLevel INT,
    regionName VARCHAR(255),
    address VARCHAR(255),
    latitude DOUBLE,
    longitude DOUBLE,
    distance DOUBLE,
    postcode INT,
    councilArea VARCHAR(255),
    propertyCount INT
    hasBalcony BOOLEAN,
    hasElevator BOOLEAN,
);

CREATE TABLE townhouses (
    landSize INT,
    propertyId INT PRIMARY KEY,
    rooms INT,
    bathroom INT,
    parkingSpot INT,
    buildingSize INT,
    regionName VARCHAR(255),
    address VARCHAR(255),
    latitude DOUBLE,
    longitude DOUBLE,
    distance DOUBLE,
    postcode INT,
    councilArea VARCHAR(255),
    propertyCount INT
    yearBuilt INT,
    numberOfSharedWalls INT,
    numberOfLevels INT,
);

CREATE TABLE developmentSite (
    propertyId INT PRIMARY KEY,
    landSize INT,
    regionName VARCHAR(255),
    address VARCHAR(255),
    latitude DOUBLE,
    longitude DOUBLE,
    distance DOUBLE,
    postcode INT,
    councilArea VARCHAR(255),
    propertyCount INT
    isLandCleared BOOLEAN,
    underConstruction BOOLEAN,
);
